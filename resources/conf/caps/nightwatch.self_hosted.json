{
	"src_folders": ["src/tests/suites"],

	"webdriver": {
		"keep_alive": true,
		"timeout_options": {
			"timeout": 60000,
			"retry_attempts": 3
		}
	},

	"test_runner": {
		"type": "mocha",
		"options": {
			"ui": "bdd",
			"reporter": "list"
		}
	},

	"test_workers": {
		"enabled": false,
		"workers": 2,
		"node_options": "inherit"
	},

	"test_settings": {
		"default": {
			"launch_url": "https://nightwatchjs.org"
		},

		"self_hosted": {
			"selenium": {
				"host": "localhost",
				"port": 4444
			},

			"desiredCapabilities": {
				"browserName": "chrome"
			}
		},

		"self_hosted.chrome": {
			"extends": "self_hosted",
			"desiredCapabilities": {
				"browserName": "chrome"
			}
		},

		"self_hosted.firefox": {
			"extends": "self_hosted",
			"desiredCapabilities": {
				"browserName": "firefox"
			}
		}
	}
}
